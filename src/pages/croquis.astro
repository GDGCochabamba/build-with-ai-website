---
import Navbar from "@/components/2025/Navbar.astro";
import Layout from "../layouts/Layout.astro";

import { Image } from "astro:assets"
import CroquisMap from "../assets/images/croquismap.svg";
import CroquisBackground from "../assets/images/croquis-background.svg"

import Brackets from "@/assets/icons/brackets.svg"
import Hash from "@/assets/icons/hash.svg"
import Times from "@/assets/icons/times.svg"
import CPU from "@/assets/icons/cpu.svg"
import Atom from "@/assets/icons/atom.svg"
import AngleBrackets from "@/assets/icons/angle-brackets.svg"
---

<Layout>
    <main class="w-full h-screen flex flex-col items-center mt-10">
        <Navbar/>
        <div class="absolute w-full h-[90vh]">
            <Image src={CroquisBackground} alt="background" class="absolute inset-0 w-full h-full object-cover" />
            <div class="pointer-events-none absolute inset-0 z-10 bg-gradient-to-b from-white via-transparent to-white opacity-80"></div>
        </div>

        <div class="w-full h-screen absolute">
            <Brackets class="absolute top-16 right-20 z-20" />
            <Times class="absolute bottom-1/2 right-8 z-20" />
            <Atom class="absolute bottom-1/4 right-20 z-20" />

            <Hash class="absolute top-12 left-20 z-20" />
            <CPU class="absolute top-1/3 left-8 z-20" />
            <AngleBrackets class="absolute bottom-1/4 left-16 z-20" />
        </div>

        <div class="z-20">
            <h2 class="text-center text-2xl mb-8 font-bold text-[33px] mt-10">Croquis General</h2>
            <Image
                    src={CroquisMap}
                    alt="Croquis General del Evento"
                    class="w-full h-auto mb-8 pr-12 pl-12"
            />

            <div class="w-full grid grid-cols-3 grid-rows-4 gap-4 justify-items-center">
                <div>
                    <div class="flex items-center gap-2 text-[0.95rem] mb-5" style="--tw-dot:#4285F4;"><span class="w-4 h-4" style="background-color:var(--tw-dot)"></span>Zona Hackathon</div>
                    <div class="flex items-center gap-2 text-[0.95rem] mb-5" style="--tw-dot:#FBC02D;"><span class="w-4 h-4" style="background-color:var(--tw-dot)"></span>Zona para Comida</div>
                    <div class="flex items-center gap-2 text-[0.95rem] mb-5" style="--tw-dot:#E53935;"><span class="w-4 h-4" style="background-color:var(--tw-dot)"></span>Zona Empresas</div>
                    <div class="flex items-center gap-2 text-[0.95rem] mb-5" style="--tw-dot:#F8BBD0;"><span class="w-4 h-4" style="background-color:var(--tw-dot)"></span>Pasillo</div>
                </div>
                <div>
                    <div class="flex items-center gap-2 text-[0.95rem] mb-5" style="--tw-dot:#FFB74D;"><span class="w-4 h-4" style="background-color:var(--tw-dot)"></span>Zona de Descanso</div>
                    <div class="flex items-center gap-2 text-[0.95rem] mb-5" style="--tw-dot:#9FA8DA;"><span class="w-4 h-4" style="background-color:var(--tw-dot)"></span>Zona de Catering</div>
                    <div class="flex items-center gap-2 text-[0.95rem] mb-5" style="--tw-dot:#66BB6A;"><span class="w-4 h-4" style="background-color:var(--tw-dot)"></span>Baños</div>
                    <div class="flex items-center gap-2 text-[0.95rem] mb-5" style="--tw-dot:#00897B;"><span class="w-4 h-4" style="background-color:var(--tw-dot)"></span>Zona Médica</div>
                </div>
                <div>
                    <div class="flex items-center gap-2 text-[0.95rem] mb-5" style="--tw-dot:#1A237E;"><span class="w-4 h-4" style="background-color:var(--tw-dot)"></span>Zona de Descanso</div>
                    <div class="flex items-center gap-2 text-[0.95rem] mb-5" style="--tw-dot:#000000;"><span class="w-4 h-4" style="background-color:var(--tw-dot)"></span>Zona de Catering</div>
                    <div class="flex items-center gap-2 text-[0.95rem] mb-5" style="--tw-dot:#C62828;"><span class="w-4 h-4" style="background-color:var(--tw-dot)"></span>Escenario Principal</div>
                    <div class="flex items-center gap-2 text-[0.95rem] mb-5" style="--tw-dot:#9E9E9E;"><span class="w-4 h-4" style="background-color:var(--tw-dot)"></span>Espacios No Disponibles</div>
                </div>
            </div>
        </div>
    </main>
</Layout>


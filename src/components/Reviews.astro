---
// You can add these interfaces in a separate types file
interface Review {
  name: string;
  comment: string;
  rating: number;
  date: string;
  avatar?: string;
}

const reviews: Review[] = [
  {
    name: "Carlos Montero",
    comment:
      "El hackathon fue una experiencia increíble. Aprendí mucho sobre IA y conocí gente muy talentosa.",
    rating: 5,
    date: "2024-03-15",
    avatar: "/avatars/carlos.jpg",
  },
  {
    name: "Ana María Flores",
    comment:
      "Mi primer hackathon y fue espectacular. Los mentores fueron muy útiles para desarrollar nuestra idea con IA.",
    rating: 5,
    date: "2024-03-15",
    avatar: "/avatars/ana.jpg",
  },
  {
    name: "José Luis Rojas",
    comment:
      "Excelente organización. Las charlas sobre IA fueron muy informativas y las herramientas proporcionadas muy útiles.",
    rating: 4,
    date: "2024-03-14",
    avatar: "/avatars/jose.jpg",
  },
  {
    name: "Patricia Mendoza",
    comment:
      "Fue intenso pero valió la pena. Logramos crear un proyecto innovador usando IA en solo 48 horas.",
    rating: 5,
    date: "2024-03-14",
    avatar: "/avatars/patricia.jpg",
  },
  {
    name: "Roberto Candia",
    comment:
      "Gran ambiente de colaboración. Aprendí muchísimo sobre las nuevas tecnologías de IA.",
    rating: 4,
    date: "2024-03-13",
    avatar: "/avatars/roberto.jpg",
  },
  {
    name: "María Elena Vargas",
    comment:
      "Una experiencia única. Los workshops de IA fueron muy prácticos y el networking excepcional.",
    rating: 5,
    date: "2024-03-13",
    avatar: "/avatars/maria.jpg",
  },
  {
    name: "Fernando Paz",
    comment:
      "El mejor evento de tecnología al que he asistido. Grandes proyectos de IA presentados.",
    rating: 5,
    date: "2024-03-12",
    avatar: "/avatars/fernando.jpg",
  },
  {
    name: "Carmen Suárez",
    comment:
      "Superó mis expectativas. Excelente oportunidad para aprender sobre IA y emprendimiento.",
    rating: 5,
    date: "2024-03-12",
    avatar: "/avatars/carmen.jpg",
  },
];
---

<section id="opiniones" class="reviews-container mx-auto max-w-screen-xl py-12 px-4 scroll-mt-12">
  <h2 class="text-3xl font-bold text-center mb-8">
    Lo que dicen nuestros participantes sobre el
    <span class="text-yellow-400">Build with AI Bolivia</span>
    <span class="text-gray-500"> 2024</span>
  </h2>

  <div class="grid gap-6 md:grid-cols-2">
    {
      reviews.map((review) => (
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="flex items-center mb-4">
            {review.avatar && (
              <img
                src={review.avatar}
                alt={`${review.name}'s avatar`}
                class="w-12 h-12 rounded-full mr-4"
              />
            )}
            <div>
              <h3 class="font-semibold">{review.name}</h3>
              <p class="text-sm text-gray-600">{review.date}</p>
            </div>
          </div>

          <div class="flex mb-2">
            {Array.from({ length: review.rating }).map(() => (
              <svg
                class="w-5 h-5 text-yellow-400"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <p class="text-gray-700">{review.comment}</p>
        </div>
      ))
    }
  </div>
</section>

---
import { Image } from "astro:assets";

// Usamos rutas relativas para las imágenes
import LogoBCP from "../../assets/images/sponsors_2025/LogoBCP.jpg";
import CONFIARED from "../../assets/images/sponsors_2025/CONFIARED.svg";
import CCLogo from "../../assets/images/sponsors_2025/cc_logo.svg";
import NexusLogo from "../../assets/images/sponsors_2025/logo-nexus.webp";
import encora from "../../assets/images/sponsors/encora.png";
import Delve from "../../assets/images/sponsors_2025/delve_black_nuevo.png";
import Navi from "../../assets/images/sponsors_2025/navi.png";

const sponsors = [
  {
    name: "Banco de Crédito BCP",
    image: LogoBCP,
  },
  {
    name: "Confiared",
    image: CONFIARED,
  },
  {
    name: "Creative Commons",
    image: CCLogo,
  },
  { 
    name: "Nexus", 
    image: NexusLogo,
  },
  {
    name: "Delve",
    image: Delve
  },
  {
    name: "Navi",
    image: Navi,
  },
  {
    name: "Encora",
    image: encora,
  }
];
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        Nuestros Patrocinadores
      </h2>
      <p class="text-xl text-gray-600">
        Empresas que hacen posible Build With AI 2025
      </p>
    </div>

    <div
      class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 items-center justify-items-center"
    >
      {
        sponsors.map((sponsor) => (
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 w-full max-w-[200px]">
            <div class="aspect-[3/2] relative flex items-center justify-center">
              <Image
                src={sponsor.image}
                alt={sponsor.name}
                class="w-full h-full object-contain"
              />
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

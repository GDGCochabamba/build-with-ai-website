---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        Nuestros Patrocinadores
      </h2>
      <p class="text-xl text-gray-600">
        Empresas que hacen posible Build With AI 2025
      </p>
    </div>

    <div
      class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 items-center justify-items-center"
    >
      {
        sponsors.map((sponsor) => (
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 w-full max-w-[200px]">
            {/* Logo del sponsor */}
            <div class="aspect-[3/2] relative flex items-center justify-center mb-4">
              <img
                src={sponsor.image}
                alt={sponsor.name}
                class="w-full h-full object-contain"
              />
            </div>

            {/* Iconos de redes sociales */}
            <div class="flex justify-center space-x-3">
              {sponsor.socialLinks.map((social, index) => (
                <a
                  href={social.url}
                  class="w-8 h-8 flex items-center justify-center rounded-full bg-gray-100 hover:bg-gray-200 transition-colors duration-200"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <img
                    src={social.icon}
                    alt={`Social ${index + 1}`}
                    class="w-5 h-5 opacity-70 hover:opacity-100 transition-opacity duration-200"
                  />
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

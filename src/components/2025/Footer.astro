---
interface Props {
  footerTitle?: string;
}

const { footerTitle = "GDG Chapters Bolivia" } = Astro.props;
---

<footer
  class="w-full bg-black text-white py-4"
  role="contentinfo"
  aria-label="Comunidades GDG Bolivia"
>
  <div class="container mx-auto px-4">
    <h2 class="sr-only">{footerTitle}</h2>
    <nav aria-label="GDG Chapters">
      <div
        class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6 text-sm md:text-base place-items-center"
      >
        <span itemprop="member">#GDGSantaCruz</span>
        <span itemprop="member">#GDGTarija</span>
        <span itemprop="member">#GDGCochabamba</span>
        <span itemprop="member">#GDGSucre</span>
        <span itemprop="member">#GDGElAlto</span>
        <span itemprop="member">#GDGLaPaz</span>
      </div>
    </nav>
  </div>
</footer>

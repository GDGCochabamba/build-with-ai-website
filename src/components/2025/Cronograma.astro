    <!-- Grid de días -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 max-w-screen-sm lg:max-w-screen-xl mx-auto">
      {cronograma.map((dia, index) => (
        <div class="bg-white rounded-2xl p-8 w-80 lg:w-auto mx-auto">
          <!-- Encabezado del día -->
          <h3 class='text-2xl text-center font-bold mb-4 text-blue-500'>
            {dia.dia}
          </h3>

          <!-- Encabezados de tabla -->
          <div class="grid grid-cols-[2fr_3fr] gap-4 pb-4 font-bold">
            <span>Hora</span>
            <span>Actividad</span>
          </div>

          <!-- Lista de actividades -->
          {dia.actividades.map((actividad) => (
            <div class="grid grid-cols-[2fr_3fr] gap-4 py-2 text-sm border-b border-blue-300 last:border-b-0">
              <span class="text-nowrap w-full">
                {actividad.hora}
              </span>
              <span class="font-medium">
                {actividad.actividad}
              </span>

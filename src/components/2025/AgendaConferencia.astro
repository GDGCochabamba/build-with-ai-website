---
import { cronograma } from '../../data/charlas.js';
---

<section class="py-16 px-4 bg-gray-50">
  <div class="max-w-5xl mx-auto">
    {cronograma.map(({ auditorio, actividades }) => (
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-blue-700 text-center mb-6">Track - {auditorio}</h2>

        <div class="bg-white rounded-xl shadow-md overflow-hidden divide-y divide-gray-200">
          {actividades.map(({ hora, titulo, expositor }) => (
            <div class="grid grid-cols-[100px_1fr] gap-6 px-6 py-5 items-start">
              <div class="text-sm font-semibold text-gray-600">{hora}</div>
              <div>
                <div class="font-medium text-gray-900">{titulo}</div>
                <div class="text-sm text-gray-500 mt-1">{expositor}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>